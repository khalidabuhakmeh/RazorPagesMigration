@model RazorPagesMigration.Models.Widgets.IndexModel

@{
    ViewBag.Title = "title";
}

<h2>
    Widgets!
    <a asp-controller="Widgets" asp-action="New" class="btn btn-primary float-right">
        Add New Widget
    </a>
</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var w in Model.All)
            {
                <tr>
                    <td>@w.Id</td>
                    <td>
                        <a asp-action="edit" asp-route-id="@w.Id">
                            @w.Name
                        </a>
                    </td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@w.Id">
                            <button type="submit" class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>